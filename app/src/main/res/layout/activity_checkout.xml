<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/OriginalThemeV2NoActionBar"
    xmlns:fancy="http://schemas.android.com/tools"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarwrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="#000"
            style="@style/CustomTheme"
            android:background="@drawable/gradient_background">

        </androidx.appcompat.widget.Toolbar>




    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_below="@id/toolbarwrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/borderfile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Order Details"
                    fancy:fb_textColor="#424242" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total No. of Items : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/no_of_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="10"/>

                </LinearLayout>
                ///main
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products Price : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/amount__"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="15000"/>

                </LinearLayout>
                ///delivery
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Delivery Charge : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/deliverychargeall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="15000"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="15000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Delivery Date : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="28/12/2017"/>

                </LinearLayout>
                ////advance payment

            </LinearLayout>
            ////advance payment
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/borderfile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Advance Payment  Details"
                    fancy:fb_textColor="#424242" />
                ////advance payment
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/totalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="10"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advance Payment  : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/advancepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="15000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CND Payment Amount : "
                        style="@style/fonts"
                        android:textColor="#424242"/>

                    <TextView
                        android:id="@+id/codpaymentamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/headingfonts"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="28/12/2017"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/headingfonts"
                android:text="Payment Mode : (Send money on this number)"
                android:textColor="#424242"/>
            <Spinner
                android:id="@+id/spinner3"
                android:background="@drawable/border"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50dp"
                ></Spinner>


            <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/main_activity_multi_line_radio_group"
                multi_line_radio_group:max_in_row="3"
                android:backgroundTint="#FF0000"
                multi_line_radio_group:default_button="COD"
                multi_line_radio_group:radio_buttons="@array/radio_buttons"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_width_small"
                android:background="@color/grey_light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/headingfonts"
                android:text="Payment Details :"
                android:textColor="#424242"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/amountddd"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/smartphone"
                app:met_floatingLabel="highlight" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/payment_number"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Payment Number"
                android:textColor="@color/black"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/smartphone"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/yourpay"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Payment Number"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/smartphone"
                app:met_floatingLabel="highlight" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/transcstion"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Transaction Number"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/smartphone"
                app:met_floatingLabel="highlight" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/headingfonts"
                android:text="Complete Address :"
                android:textColor="#424242"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ordername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/profile"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/orderemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:visibility="gone"
                android:text="abc@gmail.com"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimaryDark"
                app:met_iconLeft="@drawable/mail"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ordernumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:maxLength="11"

                app:met_iconLeft="@drawable/smartphone"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimaryDark"
                android:inputType="number" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/orderaddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:hint="Complete address"
                android:inputType="text"
                android:minLines="3"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/home"
                app:met_primaryColor="@color/colorPrimaryDark" />
            <EditText

                android:id="@+id/notificationsetup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin Notification"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="12dp"



                android:inputType="textMultiLine"
                android:layout_marginBottom="15dp"/>
            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/orderaddress2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:hint="Complete address 2 "
                android:inputType="text"
                android:minLines="3"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/home"
                app:met_primaryColor="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/orderpincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postcode"
                android:text="25555"
                android:visibility="gone"
                app:met_iconLeft="@drawable/pincode"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorPrimaryDark"
                android:inputType="number"
                android:layout_marginBottom="15dp"/>


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ordernow"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="40dp"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:padding="17dp"
              />
            <TextView
                android:onClick="PlaceOrder"
                android:background="@drawable/gradient_background"



                android:layout_marginLeft="20dp"
                android:id="@+id/updatepin"




                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Order Now"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"


                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"

                android:textSize="13dp"
                android:gravity="center_vertical"
                />


        </LinearLayout>




    </ScrollView>



</RelativeLayout>
