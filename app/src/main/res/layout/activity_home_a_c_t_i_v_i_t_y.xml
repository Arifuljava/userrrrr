<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    app:itemTextColor="@color/white"
    app:itemIconTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.messas.bdshopbazargardennurserybd.HomeACTIVITY">

    <RelativeLayout
        android:background="#fff"

        android:id="@+id/main_constraint"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/ddd"

            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"

                app:titleTextColor="#fff"
                android:background="@color/grey"

                app:navigationIcon="@drawable/ic_baseline_list_24"


                app:titleMarginStart="20dp"

                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView



                        android:layout_marginLeft="10dp"


                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nursery Shop"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/space_5dp"
                        android:fontFamily="@font/josefinsans_semibold"

                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        />
                    <TextView



                        android:layout_marginLeft="10dp"


                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="BD"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/space_5dp"
                        android:fontFamily="@font/josefinsans_semibold"

                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView

            app:itemTextColor="@color/black"
            app:itemIconTint="@color/black"
            android:id="@+id/mainBottomNav"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@color/white"
            android:elevation="10dp"

            app:labelVisibilityMode="labeled"
            android:layout_alignParentBottom="true"

            app:menu="@menu/bottom2" />

        <FrameLayout

            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/mainBottomNav"

            android:layout_marginBottom="50dp"

            >

        </FrameLayout>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView

        android:id="@+id/main_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        app:itemTextColor="@color/dark_blue"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
